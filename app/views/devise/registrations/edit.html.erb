<%= render 'shared/header' %>

<div class="container">
  <h2>ユーザー編集 <%= current_user.name %> 様</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label '名前' %> <span class="badge badge-danger">必須</span>
  </div>
  <div>
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="mt-2">
    <%= f.label 'メールアドレス' %> <span class="badge badge-danger">必須</span>
  </div>
  <div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mt-2">
    <%= f.label 'パスワード' %> <span class="badge badge-danger">必須</span> <i>(変更しない場合は空欄のままにしてください。)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"6文字以上半角英数" %>
    <% if @minimum_password_length %>
      <br />
    <% end %>
  </div>

  <div class="mt-2">
    <%= f.label 'パスワード確認' %> <span class="badge badge-danger">必須</span> <i>(変更しない場合は空欄のままにしてください。)</i><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"上記と同じもの" %>
  </div>

  <div class="mt-2">
    <%= f.label '現在のパスワード' %> <span class="badge badge-danger">必須</span> <i>(変更するには現在のパスワードが必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="mt-2">
    <%= f.submit "更新" %>
  </div>
<% end %>

  <div class="mt-5">
    <h2>アカウントの削除</h2>
  </div>
  <div>
    <p>本当に削除しますか？</p>
  </div>
  <div>
    <button class="btn btn-sm btn-danger"><%= link_to "アカウントの削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "link_white" %></button>
  </div>
  <div class="mt-3">
    <%= link_to "もどる", :back %>
  </div>

</div>