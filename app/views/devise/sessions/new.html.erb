<div class="container mb-5">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <div class='form-text-wrap'>
        <label>メールアドレス</label>
        <span class="badge badge-danger">必須</span>
      </div>
      <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>

    <div class="field">
      <div class='mt-3'>
        <label>パスワード</label>
        <span class="badge badge-danger">必須</span>
      </div>
      <%= f.password_field :password, placeholder:"" %>
    </div>

    <div class="mt-3">
      <%= f.submit "ログイン" %>
      <%= link_to "もどる", root_path %>
    </div>
  <% end %>

</div>