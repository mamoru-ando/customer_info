<%= render 'shared/header' %>

<p>顧客情報登録</p>

<%= form_with model: @customer, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <div class='form-text-wrap'>
      <label class="form-text">お名前</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) 山田" %>
      <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 太郎" %>
    </div>

    <div class='form-text-wrap'>
      <label class="form-text">お名前カナ</label>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) ヤマダ" %>
      <%= f.text_area :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) タロウ" %>
    </div>

    <label class="form-text">性別</label>
      <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>

    <div class='form-text-wrap'>
      <label class="form-text">電話番号1</label>
    </div>
    <div>
      <%= f.text_field :tell1, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
    </div>

    <div class='form-text-wrap'>
      <label class="form-text">電話番号2</label>
    </div>
    <div>
      <%= f.text_field :tell2, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
    </div>

    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
    <div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>

    <div class='form-text-wrap'>
      <label class="form-text">住所</label>
    </div>
    <div >
      <%= f.text_area :address, class:"input-name", id:"last-name-kana", placeholder:"例) 神奈川県鎌倉市材木座1-1" %>
    </div>

    <div class='form-text-wrap'>
      <label class="form-text">メモ</label>
    </div>
    <div >
      <%= f.text_area :memo, class:"input-name", id:"last-name-kana", placeholder:"" %>
    </div>

    <div class='form-text-wrap'>
      <label class="form-text">外見情報</label>
    </div>
    <div >
      <%= f.text_area :appearance, class:"input-name", id:"last-name-kana", placeholder:"" %>
    </div>

    <div class="sell-btn-contents">
      <%= f.submit "登録する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>

<% end %>