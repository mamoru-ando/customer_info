<%= form_with model: @customer, local: true do |f| %>

  <%= render 'shared/error_messages', model: f.object %>

    <div>
      <label>お名前</label> <span class="badge badge-danger">必須</span>
    </div>
    <div>
      <%= f.text_field :name, autofocus: true, placeholder:"例) 山田 太郎" %>
    </div>

    <div>
      <label>お名前カナ</label>
    </div>
    <div>
      <%= f.text_field :name_kana, placeholder:"例) ヤマダ タロウ" %>
    </div>

    <div class="form-group">
      <div>
        <label for="sex_id" class="control-label">性別</label>
      </div>
      <div>
        <%= f.collection_select(:sex_id, Sex.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
      </div>
    </div>

    <div>
      <label>電話番号-1</label>
    </div>
    <div class="col-xs-4">
      <%= f.text_field :tell1, class: "form", placeholder:"例）09012345678",maxlength:"11"%>
    </div>

    <div>
      <label class="form-text">電話番号-2</label>
    </div>
    <div>
      <%= f.text_field :tell2, class: "form", placeholder:"例）09012345678",maxlength:"11"%>
    </div>

    <div>
      <label class="form-text">メールアドレス</label>
    </div>
    <div>
      <%= f.email_field :email, placeholder:"PC・携帯どちらでも可" %>
    </div>

    <div>
      <label class="form-text">住所</label>
    </div>
    <div >
      <%= f.text_area :address, class: "memo", placeholder:"例) 神奈川県鎌倉市材木座1-1" %>
    </div>

    <div>
      <label class="form-text">メモ</label>
    </div>
    <div>
      <%= f.text_area :memo, class: "text_area", placeholder:"" %>
    </div>

    <div>
      <label class="form-text">外見情報</label>
    </div>
    <div >
      <%= f.text_area :appearance, class: "text_area", placeholder:"" %>
    </div>

    <div class="md-5">
      <%= f.submit "登録する" %>
      <a href="/">もどる</a>
    </div>

<% end %>